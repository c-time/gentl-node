{
  "name": "gentl-node",
  "version": "1.0.0",
  "description": "Node.js環境でのウェブサイトテンプレートファイル処理ライブラリ。@c-time/gentlをラップし、jsdomとNodeのファイルシステムを利用してHTMLテンプレートの生成を行います。",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "lint": "echo 'No linter configured'",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "template",
    "html",
    "generator", 
    "gentl",
    "jsdom",
    "node",
    "website",
    "static-site",
    "build-tool",
    "template-engine"
  ],
  "author": "c-time",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-time/gentl-node.git"
  },
  "bugs": {
    "url": "https://github.com/c-time/gentl-node/issues"
  },
  "homepage": "https://github.com/c-time/gentl-node#readme",
  "dependencies": {
    "@c-time/gentl": "^1.2.0",
    "jsdom": "^27.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.8.1",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
